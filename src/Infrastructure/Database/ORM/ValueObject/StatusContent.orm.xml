<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <embeddable name="App\Domain\ValueObject\StatusContent">
        <field name="title" column="title" type="string" length="60" />
        <field name="subTitle" column="sub_title" type="json" />
        <field name="description" column="description" type="json" />
        <field name="icoType" column="ico_type" type="json" />
    </embeddable>
</doctrine-mapping>
